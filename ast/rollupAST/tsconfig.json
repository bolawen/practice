{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["__test__"]
}
